@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewData["Title"] = "Игры";
}

<div class="d-flex flex-row flex-nowrap justify-content-between my-3">
    <h2 class="col-6 text-start">Игры для ботов</h2>
    <a class="col-2 btn btn-success p-2" asp-controller="BotWatchdogApi" asp-action="GetBotGames">Скачать файл</a>
</div>

<div>
    <form id="addForm" class="mb-3">
        <input id="gameUrl" type="text" placeholder="URL Игры" class="form-control mb-2" required />
        <button class="btn btn-success">Добавить Игру</button>
    </form>
</div>

<table class="table table-bordered" id="gamesTable">
    <thead>
    <tr>
        <th>URL</th>
        <th class="col-1"></th>
    </tr>
    </thead>
    <tbody></tbody>
</table>

@section Scripts {
    <script>
        async function loadGames() {
            const res = await fetch('/api/admin/bots/games');
            const data = await res.json();
            const tbody = document.querySelector('#gamesTable tbody');
            
            tbody.innerHTML = data.map(p => {
                return `
                <tr data-id=${p.id}>
                    <td><a href="${p.gameUrl}" target="_blank" rel="noopener noreferrer">${p.gameUrl}</a></td>
                    <td class="text-center">
                        <button class="btn btn-sm btn-danger" onclick="deleteGame(${p.id})">Удалить</button>
                    </td>
                </tr>
                `}).join('');
        }

        document.getElementById('addForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const gameUrl = document.getElementById('gameUrl').value;
            await fetch('/api/admin/bots/games', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ gameUrl })
            });
            e.target.reset();
            await loadGames();
        });

        async function deleteGame(id) {
            await fetch(`/api/admin/bots/games/${id}`, { method: 'DELETE' });
            await loadGames();
        }

        loadGames();
    </script>
}