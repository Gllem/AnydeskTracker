@{
    Layout = "_Layout";
    ViewData["Title"] = "Игры";
}

<h2>Управление Играми</h2>

<div>
    <form id="addForm" class="mb-3">
        <input id="gameUrl" type="text" placeholder="URL Игры" class="form-control mb-2" required />
        <input id="gameName" type="text" placeholder="Имя игры" class="form-control mb-2" required />
        <button class="btn btn-success">Добавить Игру</button>
    </form>
</div>

<table class="table table-bordered" id="gamesTable">
    <thead>
    <tr>
        <th>ID</th>
        <th>Имя</th>
        <th>URL</th>
        <th>Пользователи</th>
        <th></th>
    </tr>
    </thead>
    <tbody></tbody>
</table>

@section Scripts {
    <script>
        let selectedUsers = {};
        
        async function loadGames() {
            const res = await fetch('/api/admin/games');
            const data = await res.json();
            const tbody = document.querySelector('#gamesTable tbody');

            data.forEach(x => selectedUsers[x.id] = x.users.map(x => x.id));
            
            tbody.innerHTML = data.map(p => {
                return `
                <tr>
                    <td>${p.id}</td>
                    <td>${p.gameName}</td>
                    <td><a href="${p.gameUrl}" target="_blank" rel="noopener noreferrer">${p.gameUrl}</a></td>
                    <td>
                        <select class="user-select" multiple data-game-id="${p.id}"></select>
                    </td>
                    <td>
                        <button class="btn btn-sm btn-danger" onclick="deleteGame(${p.id})">Удалить</button>
                    </td>
                </tr>
                `}).join('');
            await loadUsersForSelects();
        }

        document.getElementById('addForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const gameUrl = document.getElementById('gameUrl').value;
            const gameName = document.getElementById('gameName').value;
            await fetch('/api/admin/games', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ gameUrl, gameName })
            });
            e.target.reset();
            loadGames();
        });

        async function loadUsersForSelects() {
            const res = await fetch('/api/admin/users');
            const users = await res.json();

            const userOptions = users.map(u => ({
                id: u.userId,
                text: u.userName
            }));

            const userSelects = $('.user-select');
            
            userSelects.each(function () {
                $(this).select2({
                    data: userOptions,
                    placeholder: 'Выберите пользователей',
                    width: '100%'
                });

                loadAssignedUsers($(this).data('game-id'), $(this));
            });

            userSelects.on('change', async function () {
                const gameId = $(this).data('game-id');
                const selectedUsers = $(this).val();
                await assignUsers(gameId, selectedUsers);
            });
        }
        
        async function loadAssignedUsers(gameId, selectElement) {
            selectElement.val(selectedUsers[gameId]).trigger('change');
        }
        
        async function assignUsers(gameId, selectedOptions) {
            const userIds = Array.from(selectedOptions);

            const res = await fetch(`/api/admin/games/${gameId}/assign`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(userIds)
            });

            if (!res.ok) {
                alert('Ошибка при назначении пользователей');
            }
        }

        async function deleteGame(id) {
            await fetch(`/api/admin/games/${id}`, { method: 'DELETE' });
            loadGames();
        }

        (async () => {
            await loadGames();
        })()
    </script>
}

