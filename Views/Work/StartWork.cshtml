@{
    Layout = "_Layout";
    ViewData["Title"] = "Начало смены";
}

<div class="text-center">
    <h1 class="mb-4">Начало смены</h1>
    <button id="startWorkBtn" class="btn btn-primary">Начать работу</button>
</div>

<script>
document.getElementById("startWorkBtn").addEventListener("click", async () => {
    const res = await fetch("/Work/Start", { method: "POST" });
    if (res.ok) {
        window.location.href = "/Work";
    } else {
        alert("Ошибка при начале смены");
    }
});
</script>